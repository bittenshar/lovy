    {
      "name": "FCM Token Registration",
      "item": [
        {
          "name": "Register Worker FCM Token",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test('Status code is 200', function () {",
                  "    pm.expect(pm.response.code).to.equal(200);",
                  "});",
                  "",
                  "pm.test('FCM token registered', function () {",
                  "    var jsonData = pm.response.json();",
                  "    pm.expect(jsonData.status).to.equal('success');",
                  "    pm.environment.set('workerFcmToken', jsonData.data.fcmToken);",
                  "});",
                  "",
                  "console.log('Worker FCM Token registered:', pm.environment.get('workerFcmToken'));"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{workerToken}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"fcmToken\": \"worker_fcm_token_test_123456789\",\n  \"platform\": \"ios\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/notifications/register-token",
              "host": ["{{baseUrl}}"],
              "path": ["api", "notifications", "register-token"]
            }
          }
        },
