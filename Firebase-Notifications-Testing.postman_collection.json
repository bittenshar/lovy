              "listen": "test",
              "script": {
                "exec": [
                  "var jsonData = pm.response.json();",
                  "console.log('=== NOTIFICATIONS SUMMARY ===');",
                  "console.log('Total: ' + jsonData.results);",
                  "jsonData.data.forEach(function(notif) {",
                  "    console.log('- ' + notif.type + ': ' + notif.title + ' (Read: ' + (notif.readAt ? 'Yes' : 'No') + ')');",
                  "});"
                ]
              }
            }
          ],
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{workerToken}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/notifications?limit=50&sort=-createdAt",
              "host": ["{{baseUrl}}"],
              "path": ["api", "notifications"],
              "query": [
                {
                  "key": "limit",
                  "value": "50"
                },
                {
                  "key": "sort",
                  "value": "-createdAt"
                }
              ]
            }
          }
        }
