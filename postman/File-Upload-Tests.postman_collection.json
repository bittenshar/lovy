            },
            "url": {
              "raw": "{{baseUrl}}/api/businesses/{{business_id}}",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "api",
                "businesses",
                "{{business_id}}"
              ]
            },
            "description": "Try uploading without Authorization header. Should receive 401 error."
          },
          "response": []
        }
      ]
