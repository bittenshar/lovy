{
  "info": {
    "name": "WorkConnect Test Data",
    "description": "Test data for WorkConnect API",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Test Data Reference",
      "item": [
        {
          "name": "1. Register Employer (Owner)",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"owner@example.com\",\n  \"password\": \"Password123!\",\n  \"firstName\": \"Owner\",\n  \"lastName\": \"User\",\n  \"userType\": \"employer\"\n}"
            },
            "url": {
              "raw": "{{BASE_URL}}/api/auth/register",
              "host": ["{{BASE_URL}}"],
              "path": ["api", "auth", "register"]
            }
          }
        },
        {
          "name": "2. Login Owner (Get TOKEN)",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"owner@example.com\",\n  \"password\": \"Password123!\"\n}"
            },
            "description": "Save the token to {{TOKEN}} variable",
            "url": {
              "raw": "{{BASE_URL}}/api/auth/login",
              "host": ["{{BASE_URL}}"],
              "path": ["api", "auth", "login"]
            }
          }
        },
        {
          "name": "3. Create Business (Owner)",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{TOKEN}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"Owner Company\",\n  \"industry\": \"Technology\",\n  \"description\": \"Company owned by the employer\",\n  \"address\": {\n    \"street\": \"123 Main Street\",\n    \"city\": \"San Francisco\",\n    \"state\": \"CA\",\n    \"zipCode\": \"94105\",\n    \"country\": \"USA\"\n  },\n  \"phone\": \"+1-555-0100\",\n  \"email\": \"owner@company.com\",\n  \"website\": \"https://company.com\"\n}"
            },
            "description": "Save the business._id to {{BUSINESS_ID}} variable",
            "url": {
              "raw": "{{BASE_URL}}/api/businesses",
              "host": ["{{BASE_URL}}"],
              "path": ["api", "businesses"]
            }
          }
        },
        {
          "name": "4. Create Job (Owner)",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{TOKEN}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"business\": \"{{BUSINESS_ID}}\",\n  \"title\": \"Senior Developer - Owner Job\",\n  \"description\": \"This job is created by the owner\",\n  \"requirements\": [\"JavaScript\", \"Node.js\"],\n  \"location\": {\n    \"city\": \"San Francisco\",\n    \"state\": \"CA\",\n    \"country\": \"USA\"\n  },\n  \"jobType\": \"Full-time\",\n  \"hourlyRate\": 75,\n  \"currency\": \"USD\",\n  \"startDate\": \"2025-01-15\",\n  \"endDate\": \"2025-12-31\",\n  \"maxHoursPerWeek\": 40,\n  \"status\": \"open\"\n}"
            },
            "description": "Save the job._id to {{JOB_ID}} variable",
            "url": {
              "raw": "{{BASE_URL}}/api/jobs",
              "host": ["{{BASE_URL}}"],
              "path": ["api", "jobs"]
            }
          }
        },
        {
          "name": "5. Register Team Member",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"teamMember@example.com\",\n  \"password\": \"Password123!\",\n  \"firstName\": \"Team\",\n  \"lastName\": \"Member\",\n  \"userType\": \"employer\"\n}"
            },
            "url": {
              "raw": "{{BASE_URL}}/api/auth/register",
              "host": ["{{BASE_URL}}"],
              "path": ["api", "auth", "register"]
            }
          }
        },
        {
          "name": "6. Login Team Member (Get TEAM_TOKEN)",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"teamMember@example.com\",\n  \"password\": \"Password123!\"\n}"
            },
            "description": "Save the token to {{TEAM_TOKEN}} variable",
            "url": {
              "raw": "{{BASE_URL}}/api/auth/login",
              "host": ["{{BASE_URL}}"],
              "path": ["api", "auth", "login"]
            }
          }
        },
        {
          "name": "7. Add Team Member (Owner invites)",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{TOKEN}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"teamMember@example.com\",\n  \"role\": \"admin\",\n  \"permissions\": [\"full_access\"]\n}"
            },
            "description": "Save the teamMember._id to {{TEAM_MEMBER_ID}} variable",
            "url": {
              "raw": "{{BASE_URL}}/api/businesses/{{BUSINESS_ID}}/team-members",
              "host": ["{{BASE_URL}}"],
              "path": ["api", "businesses", "{{BUSINESS_ID}}", "team-members"]
            }
          }
        },
        {
          "name": "8. Team Member - Get Owner's Job ✅",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{TEAM_TOKEN}}"
              }
            ],
            "description": "Team member with full_access can access owner's job - SHOULD SUCCEED",
            "url": {
              "raw": "{{BASE_URL}}/api/jobs/{{JOB_ID}}",
              "host": ["{{BASE_URL}}"],
              "path": ["api", "jobs", "{{JOB_ID}}"]
            }
          }
        },
        {
          "name": "9. Team Member - Edit Owner's Job ✅",
          "request": {
            "method": "PATCH",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{TEAM_TOKEN}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"title\": \"Senior Developer - EDITED BY TEAM MEMBER\",\n  \"hourlyRate\": 80\n}"
            },
            "description": "Team member with full_access can edit owner's job - SHOULD SUCCEED",
            "url": {
              "raw": "{{BASE_URL}}/api/jobs/{{JOB_ID}}",
              "host": ["{{BASE_URL}}"],
              "path": ["api", "jobs", "{{JOB_ID}}"]
            }
          }
        },
        {
          "name": "10. Team Member - View All Jobs ✅",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{TEAM_TOKEN}}"
              }
            ],
            "description": "Team member can view all business jobs",
            "url": {
              "raw": "{{BASE_URL}}/api/jobs/employer",
              "host": ["{{BASE_URL}}"],
              "path": ["api", "jobs", "employer"]
            }
          }
        }
      ]
    }
  ],
  "variable": [
    {
      "key": "BASE_URL",
      "value": "http://localhost:3000",
      "type": "string"
    },
    {
      "key": "TOKEN",
      "value": "",
      "type": "string"
    },
    {
      "key": "WORKER_TOKEN",
      "value": "",
      "type": "string"
    },
    {
      "key": "TEAM_TOKEN",
      "value": "",
      "type": "string"
    },
    {
      "key": "TEAM_MEMBER_ID",
      "value": "",
      "type": "string"
    }
  ]
}
